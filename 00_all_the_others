measure: count_open_cases_currently_active {
    label: "Open Cases – Currently Active"
    group_label: "Lifecycle – Open Status"
    type: count_distinct
    sql: ${id} ;;
    filters: [is_open_case: "yes"]
    value_format_name: decimal_0
    description: "Counts all unique cases that are currently in an open lifecycle status, regardless of when they were created."
  }
